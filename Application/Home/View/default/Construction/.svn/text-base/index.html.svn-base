                        </li>
                        <li><a href="/subscription/index">{$Think.lang.index_nav_4}</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="layout text-center">
        <if condition="$lang eq 'en-us'">
            <img src="__STATIC__/assets/images/construction_en.png" class="img-responsive construction" alt="">
        <else/>
            <img src="__STATIC__/assets/images/construction.png" class="img-responsive construction" alt="">
        </if>
    </div>
    <div class="layout text-center layout-footer" style="position: fixed;bottom: 0px;">
        {$Think.lang.text_jijin}
    </div>
    <!-- build:js js/page_index.js -->
    <script src="__STATIC__/assets/js/jquery.js"></script>
    <script src="__STATIC__/assets/js/pintuer.js"></script>
    <script src="__STATIC__/assets/js/respond.js"></script>
    <!-- endbuild -->
    
</body>
</html>